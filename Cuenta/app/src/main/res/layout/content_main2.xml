<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lenovo.cuenta.Main2Activity"
    tools:showIn="@layout/activity_main2"
    android:background="@mipmap/bg3"
    android:columnCount="3"
    android:rowCount="3">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consignaciones"
        android:id="@+id/btnConsignar"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#676e92" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferencias"
        android:id="@+id/btnTransferencia"
        android:layout_alignTop="@+id/btnConsignar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#676e92" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retiros"
        android:id="@+id/btnRetiros"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnConsignar"
        android:layout_alignEnd="@+id/btnConsignar"
        android:background="#676e92" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConsultas"
        android:layout_alignTop="@+id/btnRetiros"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Consultas"
        android:layout_alignLeft="@+id/btnTransferencia"
        android:layout_alignStart="@+id/btnTransferencia"
        android:background="#676e92" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambio de clave"
        android:id="@+id/btnCambioClave"
        android:layout_below="@+id/btnRetiros"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#676e92" />
</RelativeLayout>
